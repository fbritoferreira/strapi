{
	"name": "@fbritoferreira/strapi",
	"version": "0.2.0",
	"description": "A generic TypeScript client for interacting with Strapi CMS APIs, supporting content fetching, creation, updates, and deletions.",
	"main": "./dist/strapi.cjs.js",
	"module": "./dist/strapi.es.js",
	"types": "./dist/strapi.d.ts",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest run",
		"test:ui": "vitest --ui",
		"prepare": "husky",
		"lint-staged": "lint-staged"
	},
	"keywords": [
		"strapi",
		"cms",
		"client",
		"typescript",
		"api",
		"headless-cms"
	],
	"author": "Filipe Brito Ferreira <me@fbritoferreira.com>",
	"license": "MIT",
	"homepage": "https://github.com/fbritoferreira/strapi#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fbritoferreira/strapi.git"
	},
	"bugs": {
		"url": "https://github.com/fbritoferreira/strapi/issues"
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"packageManager": "pnpm@10.20.0",
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@eslint/js": "^9.39.1",
		"@eslint/json": "^0.14.0",
		"@types/node": "^24.10.0",
		"@types/qs": "^6.14.0",
		"eslint": "^9.39.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jiti": "^2.6.1",
		"lint-staged": "^16.2.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "^7.2.1",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.7"
	},
	"dependencies": {
		"qs": "^6.14.0"
	},
	"lint-staged": {
		"*.{ts,js}": [
			"eslint --fix"
		]
	}
}
